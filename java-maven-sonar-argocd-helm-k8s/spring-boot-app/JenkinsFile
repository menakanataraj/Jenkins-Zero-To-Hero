pipeline {
  agent any
   stage('Checkout') {
      steps {
        sh 'echo passed'
        //git branch: 'main', https://github.com/menakanataraj/Jenkins-Zero-To-Hero.git'
      }
    }
stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://3.80.143.249:9000/"
      }
    }
}
